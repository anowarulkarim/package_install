<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree View -->
    <record id="view_package_install_list" model="ir.ui.view">
        <field name="name">package.install.list</field>
        <field name="model">package.install</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_package_install_form" model="ir.ui.view">
        <field name="name">package.install.form</field>
        <field name="model">package.install</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="accept"
                                type="object"
                                string="Install"
                                class="btn-primary"
                            invisible="state in ['installed']"
                                />
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_package_install" model="ir.actions.act_window">
        <field name="name">Install Packages</field>
        <field name="res_model">package.install</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>